<html>
    <head>
        
        <title> My Profile - Hive </title>
        <link rel="stylesheet" type="text/css" href="/Profile_Main_Style.css">
        <script src="https://kit.fontawesome.com/4c2cf73d4b.js" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/4c2cf73d4b.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.0.min.js" type="text/javascript"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" 
            crossorigin="anonymous"></script>

        <script src="voting.js"></script>

        <style>

            body{
                margin: 0;
                padding: 0;
                background: #36393e;
            }
            
        </style>

    </head>

    <body>

        <div id = "navbar">
            <img id = "hive-icon" src="/Hive_Icon.png" alt="Hive_Icon">
            <span id = "hive"> HIVE </span>
            <i class = "fa-solid fa-magnifying-glass" onclick = "search()"></i>
            <script>
                function search() {
                    var value = document.getElementById("search-bar").value;
                    var option = document.querySelector("#list option[value='" + value + "']");
                    if (option != null) {
                        window.location.href = "/" + value + "_profile";
                    } else
                        alert("no results found");
                }
            </script>
            <input type="text" id = "search-bar" list = "list" name="search" placeholder = "search" size = "100">
            <datalist id="list">
                <option value="drinkwater">
                <option value="PawsomePal">
                <option value="TheCAGE">
                <option value="Busy_Beekeeper">
                <option value="dave">
            </datalist>
            <div id = "nav-links">
                <a class = "nav-link" href="/Registered_Homepage/{{username}}"> Home </a> 
                <a class = "nav-link" href="/profile/{{username}}"> • Profile </a>
                <a class = "nav-link" href="/"> Logout </a> 
            </div>
        </div>

        <br><br>

        <div class="profilecard">

            <img  class = "cover-icon" src="/user5_cover.jpg" alt="cover_icon" width="100" height="100">
            <img  class = "profile-icon" id="profilePicture" src="{{user.dp}}" alt="profile_icon" width="100" height="100">
            

            <h1 class="profile-username" id="profile-username">{{username}}</h1>
            <p class="bio-content" id="bio-content">{{user.bio}}</p>

            <a href="#" class="editprofile-btn" onclick="showEdit()">Edit Profile</a>

            <div class="row">

                <div>
                    <p>Followers</p>
                    <h2>0</h2>
                </div>
                <div>
                    <p>Posts</p>
                    <h2>0</h2>
                </div>
                <div>
                    <p>Comments</p>
                    <h2>0</h2>
                </div>

            </div>

            <a href="#" class="create-post-btn" onclick="showPost()"><h3>Create Post</h3></a>



        </div>

        <div class = "create-post">
                <div class ="create-first"> CREATE POST 
                </div>
                <div class = "create-header">
                    <img  class = "user-icon" src="default_icon.jpg" alt="user_icon" width="32" height="32">
                    <p class = "create-username">{{username}}</p>
                    <p class = "dot"> • </p>
                    <div class = "create-title"> <input type="text" id="create-title" name="create-title" placeholder="Title"  style="width: 270px; font-family: Roboto, sans-serif; font-size: 15px; background-color: #484848; color: white;" required><br><br> 
                    </div>
                </div>
                <br><br><br><br>

                <div class = "create-content">
                    <textarea id="create-content" name="create-content" rows="5" cols="51" placeholder="Write a post" style="font-family: Roboto, sans-serif; font-size: 15px; background-color: #484848; color: white;" required></textarea> 
                </div>

                <div class = "create-footer">
                    <input href="ProfileMain.html" class="create-post-btn" type="submit" value="Post" style="width: 150px; height: 30px; background-color: rgba(32,32,32,255); border-color: rgba(255,210,1,255); color: white;" onclick="addPost(), clearText(), hidePost()">
                </div>
                <br>
        </div>

        <div class = "edit-post">
            <div class ="edit-first">
                <p class="edit-ftitle"> EDIT PROFILE </p>
                
            </div><br><br>
            <div class = "edit-header">
                <form action="/editProfile/{{username}}" method="post">
                    <p> Profile Picture •</p>
                    <div class = "edit-profile"> 
                        {{!-- <input type="button" onclick="chooseProfilePic()" id="edit-profile" name="edit-profile" style="width: 270px; font-family: Roboto, sans-serif; font-size: 15px; background-color: #484848; color: white;"><br>  --}}
                        <input type="text" onclick="chooseProfilePic()" id="editProfile" name="editProfile" placeholder="Choose Profile Picture">
                    </div>
                    <p> Username •</p>
                    <div class = "edit-profile"> <input type="text" id="editUsername" name="editUsername" placeholder="Type here"  style="width: 270px; font-family: Roboto, sans-serif; font-size: 15px; background-color: #484848; color: white;"><br>
                    </div>
                    <p> Bio • </p>
                    <textarea id="editContent" name="editContent" rows="5" cols="35" placeholder="Write something about yourself." style="font-family: Roboto, sans-serif; font-size: 15px; background-color: #484848; color: white;"></textarea>

                    <br>
                    <div class = "edit-header">
                    <button class = "edit-footer" class="edit-post-btn" type="submit" value="submit" style="width: 150px; height: 30px; background-color: rgba(32,32,32,255); border-color: rgba(255,210,1,255); color: white;">Save Profile</button>
                    </div>
                    <br>
                </form>
            </div>                     
        </div>

        <div id="dp-container">
            <div class="dp-content">
                <img class = "user-icon" src="/user5_icon.jpg" onclick="setDp('user5_icon.jpg')" alt="user_icon" width="32" height="32">
                {{#each dp_images}}
                    <img class = "user-icon" src="{{this}}" onclick="setDp('{{this}}')" alt="user_icon" width="32" height="32">
                {{/each}}

                <input class="edit-footer" value="Cancel" onclick="hideDp()" class="edit-post-btn" style="width: 150px; height: 30px; background-color: rgba(32,32,32,255); border-color: rgba(255,210,1,255); color: white; text-align: center; margin-bottom: 15px; margin-left: 35px; cursor: pointer;">
            </div>
        </div>

        <div id="profile-nav" style="border: solid black 1px;">
            <div id="profile-navlinks">
                <span class="prof-link" id="Posts">Posts</span>
            </div>
        </div>

        {{!-- <div class="post-container"> --}}
            {{#each posts}} 
                <div class = "post">
                    <div class = "post-header">
                        <img  class = "user-icon" src="{{filename}}" alt="user_icon" width="32" height="32">
                        <a class = "post-username" data-username="{{username}}" title = "view profile"> {{username}} </a>
                        <p class = "dot"> • </p>
                        <a class = "post-title" data-title="{{title}}" data-username="{{username}}" title = "view post"> {{title}} </a>
                    </div>
                    <br> 
                    <p class = "post-content"> {{content}} </p>
                    <br>
                    <div class = "post-footer">
                        <a href = "/View_Post/{{username}}/{{title}}" title = "comment"><i class="fa-solid fa-comment" style="color: #ffd201;"></i></a>
                        <span class = "comment-count"> {{commentcount}} </span>
                        {{#if upvoted}}
                            <i class="fa-solid fa-angle-up" title = "upvote" style="color: green; cursor: pointer;"></i>
                        {{else}}
                            <i class="fa-solid fa-angle-up" title = "upvote" style="color: #ffd201; cursor: pointer;"></i>
                        {{/if}}
                        <span class = "vote-count" name = "votes"> {{votes}} </span>
                        {{#if downvoted}}
                            <i class="fa-solid fa-angle-down" title = "downvote" style="color: red; margin-right: 50px; cursor: pointer;"></i>
                        {{else}}
                            <i class="fa-solid fa-angle-down" title = "downvote" style="color: #ffd201; margin-right: 50px; cursor: pointer;"></i>
                        {{/if}}
                        {{!-- <div class = "delete-button">
                        <input class = "delete-post-btn" type="submit" value="Delete" style="width: 150px; height: 30px; background-color: rgba(32,32,32,255); color: white;">
                        </div> --}}
                    </div> 
                </div>
            {{/each}}
        {{!-- </div> --}}

        

        <script src="/Create_Post.js"></script>
        <script src="login_register.js"></script>
        <script src="/Edit_Profile.js"></script>
    </body>

</html>
