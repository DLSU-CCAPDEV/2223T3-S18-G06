<!DOCTYPE html>

{{!-- Currently View_Post Format. Will change in a bit --}}


<html>
    <head>
        
        <title> Hive </title>
        <link rel="stylesheet" type="text/css" href="/Post_Style.css">
        <script src="https://kit.fontawesome.com/4c2cf73d4b.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.0.min.js" type="text/javascript"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" 
            crossorigin="anonymous"></script>
        <script src="/voting.js"></script>
        
        <style>

            body{
                margin: 0;
                padding: 0;
                background: #36393e;
            }
            
        </style>

    </head>

    <body>
        <!-- NAVBAR -->
        <div id = "navbar">
            <img id = "hive-icon" src="/Hive_Icon.png" alt="Hive_Icon">
            <span id = "hive"> HIVE </span>
            <i class = "fa-solid fa-magnifying-glass" onclick = "search()"></i>
            <script>
                function search() {
                    var value = document.getElementById("search-bar").value;
                    var option = document.querySelector("#list option[value='" + value + "']");
                    if (option != null) {
                        window.location.href = "/View_Profile/" + value + '/';
                    } else
                        alert("no results found");
                }
            </script>
            <input type="text" id = "search-bar" list = "list" name="search" size = "100" placeholder="search profile">
            <datalist id="list">
                {{#each users}}
                    <option value="{{username}}"></option>
                {{/each}}
            </datalist>
            <div id = "nav-links">
                <a class = "nav-link" href = "/Registered_Homepage/{{current.username}}" > â€¢ Home </a> 
                <a class = "nav-link" href="/profile/{{current.username}}"> Profile </a> 
                <a class = "nav-link" href = "/logout"> Logout </a> 
            </div>
        </div>

        <div id="profile-nav">

            <div id="profile-navlinks">
                <span class="prof-link" id="Posts">Post</span>
            </div>

        </div>

        <!--- COMMENT --->
        
            <div class = "comment">
            <div class = "post-header">
                <img  class = "user-icon" src="{{filename}}" alt="user_icon" width="32" height="32">
                <a class = "post-username" href = "/View_Profile/{{username}}" title = "view profile"> {{username}} </a>
            </div>
            <br> 
            <br>
            <p class = "post-content"> {{content}} </p>
            <br>
            </div>

        <script>
            function refreshPage(){
                location.reload();
            }
        </script>


        <!--- REPLY --->
        <div class="create-comment">
            <form>

            <!-- SUBMIT REPLY -->
            
            <div class="create-content">
                <div class = "post-header">
                    <p class="comment-title"> Replying to Comment </p>
                </div>
                <br> <br> <br>                

                <div class = "create-content">
                    <textarea id="create-content" name="createComment" rows="5" cols="50" placeholder="Write a comment" style="font-family: Roboto, sans-serif; font-size: 15px; background-color: #484848; color: white;" required></textarea> 
                </div>

                <div class = "create-footer">
                    <input class="create-comment-btn" type="submit" value="Comment" style="width: 150px; height: 30px; background-color: rgba(32,32,32,255); border-color: rgba(255,210,1,255); color: white;">
                </div>

                <br>
            
            </div>
            </form>
        </div>
        <br>

        <!-- COMMENTS LIST -->
        

        <div id="comment-list">
        <div id="profile-nav">
                        <span class="prof-link" id="Comments">Comments</span>
        </div>   

        {{#each comments}}
            <div class = "comment">
            <div class = "post-header">
                <img  class = "user-icon" src="{{filename}}" alt="user_icon" width="32" height="32">
                <a class = "post-username" href = "/View_Profile/{{username}}" title = "view profile"> {{username}} </a>
            </div>
            <br> 
            <br>
            <p class = "post-content"> {{content}} </p>
            <br>
            </div>
        {{/each}}

            <!-- CREATE COMMENT CONTAINER -->
            <div class="comment-container">
                <div class="comment" id="container">
                    <!-- COMMENTS BY THE USER WILL BE APPENDED HERE supposedly -->

                    

                </div>
            </div>

        </div>
        <br>

        <script src="/login_register.js"></script>
        <script src="/Create-Comment.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>

    </body>

</html>